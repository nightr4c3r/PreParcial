<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml" spacing="10.0" fx:controller="com.nightr4c3r.preparcial.Controllers.ClientsController">
    <padding>
        <Insets top="10.0" right="10.0" bottom="10.0" left="10.0" />
    </padding>
    <children>
        <GridPane hgap="10" vgap="10">
            <columnConstraints>
                <ColumnConstraints halignment="RIGHT" minWidth="120"/>
                <ColumnConstraints hgrow="ALWAYS"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints/>
                <RowConstraints/>
                <RowConstraints/>
                <RowConstraints/>
            </rowConstraints>

            <Label text="Document:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="txtClientDocument" promptText="e.g., 123456" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <Label text="Name:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextField fx:id="txtClientName" promptText="Full name" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <Label text="Telephone:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <TextField fx:id="txtClientTelephone" promptText="Phone" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

            <Label text="Email:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <TextField fx:id="txtClientEmail" promptText="name@example.com" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
        </GridPane>

        <HBox spacing="10">
            <Button text="Add" onAction="#onAddClient"/>
            <Button text="Update" onAction="#onUpdateClient"/>
            <Button text="Delete" onAction="#onDeleteClient"/>
            <Button text="Clear" onAction="#onClearClientForm"/>
        </HBox>

        <TableView fx:id="tblClients" prefHeight="250">
            <columns>
                <TableColumn fx:id="colClientDocument" text="Document" prefWidth="120"/>
                <TableColumn fx:id="colClientName" text="Name" prefWidth="160"/>
                <TableColumn fx:id="colClientTelephone" text="Telephone" prefWidth="120"/>
                <TableColumn fx:id="colClientEmail" text="Email" prefWidth="200"/>
            </columns>
        </TableView>
    </children>
</VBox>

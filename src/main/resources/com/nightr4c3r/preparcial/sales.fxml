<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml" spacing="10.0" fx:controller="com.nightr4c3r.preparcial.Controllers.SalesController">
    <padding>
        <Insets top="10.0" right="10.0" bottom="10.0" left="10.0" />
    </padding>
    <children>
        <GridPane hgap="10" vgap="10">
            <columnConstraints>
                <ColumnConstraints halignment="RIGHT" minWidth="120"/>
                <ColumnConstraints hgrow="ALWAYS"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints/>
                <RowConstraints/>
                <RowConstraints/>
                <RowConstraints/>
                <RowConstraints/>
            </rowConstraints>

            <Label text="Client:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <ComboBox fx:id="cmbSaleClient" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <Label text="Product:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <ComboBox fx:id="cmbSaleProduct" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <Label text="Quantity:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <TextField fx:id="txtSaleQuantity" promptText="e.g., 1" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

            <Label text="Unit Price:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <Label fx:id="lblSaleUnitPrice" text="-" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

            <Label text="Total:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
            <Label fx:id="lblSaleTotal" text="-" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
        </GridPane>

        <HBox spacing="10">
            <Button text="Add Sale" onAction="#onAddSale"/>
            <Button text="Delete Sale" onAction="#onDeleteSale"/>
            <Button text="Clear" onAction="#onClearSaleForm"/>
        </HBox>

        <TableView fx:id="tblSales" prefHeight="250">
            <columns>
                <TableColumn fx:id="colSaleClient" text="Client" prefWidth="150"/>
                <TableColumn fx:id="colSaleProduct" text="Product" prefWidth="150"/>
                <TableColumn fx:id="colSaleQuantity" text="Qty" prefWidth="60"/>
                <TableColumn fx:id="colSaleUnitPrice" text="Unit" prefWidth="80"/>
                <TableColumn fx:id="colSaleTotal" text="Total" prefWidth="100"/>
                <TableColumn fx:id="colSaleDate" text="Date/Time" prefWidth="160"/>
            </columns>
        </TableView>
    </children>
</VBox>

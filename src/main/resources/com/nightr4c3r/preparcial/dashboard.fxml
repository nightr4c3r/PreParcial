<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.nightr4c3r.preparcial.Controllers.DashboardController">
    <left>
        <VBox spacing="8">
            <padding>
                <Insets top="10.0" right="10.0" bottom="10.0" left="10.0" />
            </padding>
            <children>
                <Label text="Dashboard" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
                <Separator />
                <Button text="Home" onAction="#onShowHome" maxWidth="Infinity" />
                <Button text="Clients" onAction="#onShowClients" maxWidth="Infinity" />
                <Button text="Products" onAction="#onShowProducts" maxWidth="Infinity" />
                <Button text="Sales" onAction="#onShowSales" maxWidth="Infinity" />
            </children>
        </VBox>
    </left>
    <center>
        <StackPane fx:id="contentArea" />
    </center>
</BorderPane>

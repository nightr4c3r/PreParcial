<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml" spacing="10.0" fx:controller="com.nightr4c3r.preparcial.Controllers.ProductsController">
    <padding>
        <Insets top="10.0" right="10.0" bottom="10.0" left="10.0" />
    </padding>
    <children>
        <GridPane hgap="10" vgap="10">
            <columnConstraints>
                <ColumnConstraints halignment="RIGHT" minWidth="120"/>
                <ColumnConstraints hgrow="ALWAYS"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints/>
                <RowConstraints/>
                <RowConstraints/>
                <RowConstraints/>
            </rowConstraints>

            <Label text="Code:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="txtProductCode" promptText="e.g., P001" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <Label text="Name:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextField fx:id="txtProductName" promptText="Product name" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <Label text="Price:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <TextField fx:id="txtProductPrice" promptText="e.g., 9.99" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

            <Label text="Stock:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <TextField fx:id="txtProductStock" promptText="e.g., 10" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
        </GridPane>

        <HBox spacing="10">
            <Button text="Add" onAction="#onAddProduct"/>
            <Button text="Update" onAction="#onUpdateProduct"/>
            <Button text="Delete" onAction="#onDeleteProduct"/>
            <Button text="Clear" onAction="#onClearProductForm"/>
        </HBox>

        <TableView fx:id="tblProducts" prefHeight="250">
            <columns>
                <TableColumn fx:id="colProductCode" text="Code" prefWidth="120"/>
                <TableColumn fx:id="colProductName" text="Name" prefWidth="160"/>
                <TableColumn fx:id="colProductPrice" text="Price" prefWidth="100"/>
                <TableColumn fx:id="colProductStock" text="Stock" prefWidth="100"/>
            </columns>
        </TableView>
    </children>
</VBox>
